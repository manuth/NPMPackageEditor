{
  "name": "@manuth/package-json-editor",
  "version": "1.0.0",
  "description": "Provides types and tools for editing `package.json` files",
  "author": "Manuel Thalmann <m@nuth.ch>",
  "license": "MIT",
  "keywords": [],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "directories": {
    "lib": "lib",
    "test": "src/tests"
  },
  "homepage": "https://github.com/manuth/NPMPackageEditor#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/manuth/NPMPackageEditor.git"
  },
  "bugs": {
    "url": "https://github.com/manuth/NPMPackageEditor/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc -p .",
    "rebuild": "npm run clean && npm run build",
    "watch": "tsc -p . --watch",
    "clean": "rimraf ./lib",
    "lint": "eslint --max-warnings 0 --ext .js,.jsx,.ts,.tsx ./src",
    "lint-compact": "npm run lint -- -f compact || exit 0",
    "test": "mocha",
    "prepare": "npm run rebuild"
  },
  "dependencies": {
    "git-remote-origin-url": "^3.1.0",
    "normalize-package-data": "^2.5.0",
    "parse-author": "^2.0.0",
    "stringify-author": "^0.1.3"
  },
  "devDependencies": {
    "@manuth/eslint-plugin-typescript": "^2.1.2",
    "@manuth/tsconfig": "^1.2.2",
    "@manuth/tslint-presets": "^1.0.4",
    "@types/fs-extra": "^9.0.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^14.0.14",
    "@types/normalize-package-data": "^2.4.0",
    "@types/parse-author": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^3.4.0",
    "@typescript-eslint/eslint-plugin-tslint": "^3.4.0",
    "@typescript-eslint/parser": "^3.4.0",
    "eslint": "^7.3.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsdoc": "^28.5.1",
    "fs-extra": "^9.0.1",
    "mocha": "^8.0.1",
    "random-js": "^2.1.0",
    "read-pkg-up": "^7.0.1",
    "rimraf": "^3.0.2",
    "temp-filesystem": "^1.1.3",
    "tslint": "^6.1.2",
    "typescript": "^3.9.5",
    "typescript-eslint-plugin": "^1.2.1"
  }
}
